{
    "name": "#TOS - Tweets On Screen",
    "version": "0.0.2",
    "manifest_version": 3,
    "description": "Curate tweets from twitter.com into a saved list. The saved tweets will be displayed in custom HTML for other purpose.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "#TOS",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type":"module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "injection.css"
            ],
            "matches": [
                "https://twitter.com/*"
            ]
        }
    ]
}