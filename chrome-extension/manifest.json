{
  "name": "Tweets Curator",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Shortlist tweet to be featured for further usage.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://twitter.com/*",
    "https://firestore.googleapis.com/*",
    "storage",
    "tabs"
  ],
  "content_scripts": [{
    "matches": ["https://twitter.com/*"],
    "css": ["injection.css"],
    "js": ["content.js"]
  }],
  "background": {
    "scripts": ["firebase-app.js", "firebase-auth.js", "firebase-firestore.js", "background.js"]
  },
  "web_accessible_resources": ["injection.js"]
}